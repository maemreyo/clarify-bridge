# .env.example
# Copy this file to .env and fill in your values

# Application
NODE_ENV=development
PORT=3000
APP_NAME="The Clarity Bridge"
APP_URL=http://localhost:3000
CLIENT_URL=http://localhost:3001

# Database
DATABASE_URL="postgresql://user:password@localhost:5432/clarity_bridge?schema=public"

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRATION=1d
REFRESH_EXPIRATION=7d

# AI Providers (configure at least one)
# OpenAI
OPENAI_API_KEY=sk-...
OPENAI_MODEL=gpt-4-turbo-preview

# Google AI
GOOGLE_AI_API_KEY=
GOOGLE_AI_MODEL=gemini-pro

# Anthropic
ANTHROPIC_API_KEY=
ANTHROPIC_MODEL=claude-3-opus-20240229

# Vector Database
VECTOR_DB_PROVIDER=pinecone
# Pinecone
PINECONE_API_KEY=
PINECONE_ENVIRONMENT=
PINECONE_INDEX=clarity-bridge

# Payment (Stripe)
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...
STRIPE_PRICE_STARTER_MONTHLY=price_...
STRIPE_PRICE_STARTER_YEARLY=price_...
STRIPE_PRICE_PRO_MONTHLY=price_...
STRIPE_PRICE_PRO_YEARLY=price_...

# Email (SMTP)
EMAIL_FROM=noreply@claritybridge.ai
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# Logging
LOG_LEVEL=info

# External Integrations (Optional)
# Add your integration-specific variables here as needed
# JIRA_WEBHOOK_SECRET=
# LINEAR_WEBHOOK_SECRET=
# GITHUB_WEBHOOK_SECRET=
# SLACK_WEBHOOK_SECRET=
# NOTION_WEBHOOK_SECRET=
